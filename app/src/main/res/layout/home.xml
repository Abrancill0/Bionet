<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="107dp"
                android:layout_height="57dp"
                android:padding="10dp"
                android:src="@drawable/logo_superior"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:orientation="vertical">


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:background="@color/black"
                    android:elevation="4dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@drawable/traslado_articulos"
                    android:onClick="home"/>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:padding="5dp"
                    android:src="@drawable/mail"
                    android:onClick="notificaciones"/>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:padding="5dp"
                    android:src="@drawable/venta_azul"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:padding="5dp"
                    android:src="@drawable/clientes_azul"
                    android:layout_marginTop="10dp"
                    android:onClick="clientes"/>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:padding="5dp"
                    android:src="@drawable/lealtad_azul"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:padding="5dp"
                    android:src="@drawable/ecommerce_azul"/>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:padding="5dp"
                    android:src="@drawable/inventario_azul"
                    android:layout_marginTop="10dp"
                    android:onClick="inventario"/>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:padding="5dp"
                    android:src="@drawable/asistencia_azul"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:padding="5dp"
                    android:src="@drawable/cerrar_sesion_azul"
                    android:layout_marginTop="10dp"
                    android:onClick="cerrar_sesion"/>


            </LinearLayout>
            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/colorPrimaryDark"/>

</android.support.v4.widget.DrawerLayout>