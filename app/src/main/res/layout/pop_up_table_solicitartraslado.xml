<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:table="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:orientation="vertical"
            android:background="@drawable/color_margin_bottom">
            <TextView
                android:id="@+id/articulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="Selecciona artÃ­culos"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:padding="10dp"
                app:fontFamily="@font/muli" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/color_margin_bottom">
            <com.Danthop.bionet.Tables.SortableSeleccionarArticulosTable
                android:id="@+id/tabla_inventario"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="visible"
                app:tableView_headerColor="@color/white"
                table:tableView_columnCount="5">
            </com.Danthop.bionet.Tables.SortableSeleccionarArticulosTable>
        </LinearLayout>
    </LinearLayout>

    //

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:orientation="vertical"
        android:background="@drawable/pestanas_desplegables"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/solicitarTraslado"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:text="Solicitar"
                android:textColor="#ffffff"
                android:textSize="14sp" />
            <Button
                android:id="@+id/CancelarTraslado"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/red"
                android:padding="5dp"
                android:text="Cancelar"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>