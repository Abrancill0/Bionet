<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/fondo_azul"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Listado de Clientes"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/muli" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="20dp">

            <SearchView
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gray"
                android:hint="Busqueda"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:padding="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/table_clientes">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:text="ID"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/nombre_cliente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="2dp"
                        android:text="Nombre"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/correo_cliente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="2dp"
                        android:text="Correo Electrónico"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/telefono_cliente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="2dp"
                        android:text="Teléfono"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/visita_cliente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="2dp"
                        android:text="Últ. Visita"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/consumo_cliente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="2dp"
                        android:text="Consumo Promedio"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/id_referencia_cliente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="2dp"
                        android:text="ID Referencia"
                        android:textColor="@color/colorPrimary" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_crear_cliente"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="160dp"
                android:layout_height="27dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/shape_gray"
                android:padding="0dp"
                android:text="Crear cliente"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>