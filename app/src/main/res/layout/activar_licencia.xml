<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Activar Licencia"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="44dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="Active su licencia bio-Net en los campos correspondientes "
            android:textAllCaps="false"
            android:textColor="#023950" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/clave1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/licencia_campos"
                android:ems="10"
                android:gravity="center"
                android:hint="xxx"
                android:inputType="text"
                android:maxLength="3"
                android:padding="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/clave2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/licencia_campos"
                android:ems="10"
                android:gravity="center"
                android:hint="xxx"
                android:inputType="text"
                android:maxLength="3"
                android:padding="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="36sp"/>

            <EditText
                android:id="@+id/clave3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/licencia_campos"
                android:ems="10"
                android:gravity="center"
                android:hint="xxx"
                android:inputType="text"
                android:maxLength="3"
                android:padding="5dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/clave4"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/licencia_campos"
                android:ems="10"
                android:gravity="center"
                android:hint="x"
                android:inputType="text"
                android:maxLength="3"
                android:padding="5dp"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_regresar"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="158dp"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_gray"
                android:padding="0dp"
                android:text="Regresar"
                android:textColor="#000"
                android:textSize="14sp"
                android:onClick="Regresar"
                />

            <Button
                android:id="@+id/btn_aceptar"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="158dp"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn"
                android:padding="0dp"
                android:text="Aceptar"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:onClick="Bienvenida"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>