<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_extrabold"
            android:text="Bienvenido a "
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_superior"
            android:padding="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center_horizontal"
            android:padding="30dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/bionet_business"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/bionet_commerce"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="430dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Su licencia bio-Net incluye una licencia BioCheck Premium de manera gratuita. Tiene 14 días Premium y 14 días Pro." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="10dp"

            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView21s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Business Pro"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:fontFamily="@font/muli_semibold" />

                <TextView
                    android:id="@+id/textView20s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Vende, factura y  administra usuarios, tiempo y asistencia, clientes, proveedores, productos, inventarios, compras y reportes de venta"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_weight=".25"
                android:background="@drawable/shape_gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViefw21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Business Premium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:fontFamily="@font/muli_semibold" />

                <TextView
                    android:id="@+id/textVifew20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Vendedores, comisiones y Reportes de utilidades, de  comisiones, de impuestos, de ventas por categoría y de tendencias+ Business Pro"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_weight=".25"
                android:background="@drawable/shape_gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Commerce Pro"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:fontFamily="@font/muli_semibold" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:nestedScrollingEnabled="true"
                    android:text="Promociones, encuesta de satisfacción, sistema de apartados, manejo de plataforma e-commerce, ordenes especiales,  Registro de tiempo y Asistencia con lectura facial reemplazos, propinas  y reportes de formas de pago, de descuentos, de reemplazos, de transacciones, de apartados y de ordenes especiales + Business Premium."
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_weight=".25"
                android:background="@drawable/shape_gray"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Commerce Premium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:fontFamily="@font/muli_semibold" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Administración de sucursales ilimitadas, Programas de lealtad, pago con puntos,  Traslados entre sucursales, ubicación de tu sucursal en ticket digital,+ Commerce Pro "
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_aceptar2"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="134dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn"
                    android:padding="0dp"
                    android:text="Ir a Sitio Web"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_eliminar2"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="146dp"
                android:layout_height="34dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_gray"
                android:onClick="mas_informacion"
                android:padding="0dp"
                android:text="Más Información"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_aceptar5"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="148dp"
                android:layout_height="34dp"
                android:layout_marginVertical="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn"
                android:onClick="Numero_sucursal"
                android:paddingHorizontal="15dp"
                android:text="Empecemos"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>