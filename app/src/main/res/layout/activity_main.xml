<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:scaleType="centerCrop"
            android:src="@drawable/iniciar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="100dp"
        android:layout_weight=".5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Usuario"
            android:textColor="#023950" />

        <EditText
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/entry_text_rounded"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="1dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Password"
            android:textColor="#023950" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/entry_text_rounded"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="1dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/iniciar_btn"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="158dp"
                android:layout_height="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded"
                android:padding="0dp"
                android:text="Iniciar SesiÃ³n"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/crear_btn"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="158dp"
                android:layout_height="27dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/btn_rounded_nobackground"
                android:padding="0dp"
                android:text="Crear una cuenta"
                android:textColor="#000"
                android:textSize="14sp"
                android:onClick="CrearCuenta"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>