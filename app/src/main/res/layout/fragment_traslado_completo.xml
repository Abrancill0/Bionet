<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:table="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/atras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight=".9"
            android:background="@color/white"
            android:foregroundGravity="right"
            android:gravity="right"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="22dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:background="@drawable/color_margin_bottom">
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/fondo_azul"
                android:text="Solicitud de traslado"
                android:textAllCaps="false"
                android:fontFamily="@font/muli" />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_margin_bottom"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/SucOrigen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Sucursal Origen"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/SucDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:text="Sucursal Destino"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_margin_bottom"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/Sucursal_Origen"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_giro"
            android:gravity="center"
            android:text="Sucursal Origen"
            android:textColor="@color/colorPrimary" />
        <Spinner
            android:id="@+id/Sucursal_Destino"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_giro"
            android:gravity="center"
            android:text="Sucursal Destino"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentarios y observaciones"
            android:padding="10dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editObservaciones"
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_gray"
            android:ems="80"
            android:padding="10dp"
            android:inputType="text"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="Tipo de traslado" />
        <Spinner
            android:id="@+id/tipos_traslados"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_giro"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textcantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="Cantidad" />
        <EditText
            android:id="@+id/CantidadSolicitada"
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="25dp"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>




        <LinearLayout
            android:id="@+id/Layoutfecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/textfecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp"
                android:text="Fecha de vencimiento" />
            <Spinner
                android:id="@+id/SpinnerFecha"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_marginHorizontal="25dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_giro"
                android:gravity="center"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>





    <TextView
            android:id="@+id/articulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Selecciona artÃ­culos"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:padding="10dp"
            app:fontFamily="@font/muli" />
    <LinearLayout
        android:id="@+id/LayoutelegirArticulos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/LayoutTabla"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:background="@drawable/pestanas_desplegables"
            android:padding="20dp">
            <com.Danthop.bionet.Tables.SortableInventariosTable
                android:id="@+id/tabla_articulos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:visibility="visible"
                app:tableView_headerColor="@color/white"
                table:tableView_columnCount="4">
            </com.Danthop.bionet.Tables.SortableInventariosTable>
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnaceptar"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:text="Solicitar"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>





</LinearLayout>