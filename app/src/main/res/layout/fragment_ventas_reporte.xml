<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:table="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_ventas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/pestanas_desplegables"
                android:fontFamily="@font/muli"
                android:text="Venta"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_traslados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@color/fondo_azul"
                android:fontFamily="@font/muli"
                android:text="Reporte de Ventas"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_corte_caja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/pestanas_desplegables"
                android:fontFamily="@font/muli"
                android:text="Corte de Caja"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".8">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pestanas_desplegables"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/layout_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reporte de ventas"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Verifica en detalle las ventas"
                            android:textSize="15dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_movimientos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".95"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/pestaniaMovimientos"
                            android:layout_marginLeft="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_flecha_abajo"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="Movimientos"
                            android:textColor="@color/colorPrimaryDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_movimientos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <Spinner
                            android:id="@+id/sucursal_Movimientos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>

                        <Spinner
                            android:id="@+id/Metodo_pago"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>

                        <Spinner
                            android:id="@+id/Usuarios"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_apartado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".95"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pestaniaApartados"
                            android:layout_marginLeft="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_flecha_abajo"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="Apartado"
                            android:textColor="@color/colorPrimaryDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_apartado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".9"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:gravity="center"
                                android:text="Fecha de:"></TextView>

                            <Button
                                android:id="@+id/abrir_calendarioApartado1"
                                style="@android:style/Widget.Holo.Light.Button"
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/shape_gray"
                                android:drawableLeft="@drawable/ic_calendario"
                                android:paddingHorizontal="10dp"
                                android:text="Abrir Calendario"
                                android:textColor="@color/gray"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:gravity="center"
                                android:text="A:"></TextView>

                            <Button
                                android:id="@+id/abrir_calendarioApartado2"
                                style="@android:style/Widget.Holo.Light.Button"
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/shape_gray"
                                android:drawableLeft="@drawable/ic_calendario"
                                android:paddingHorizontal="10dp"
                                android:text="Abrir Calendario"
                                android:textColor="@color/gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/articulo_ventas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>

                        <Spinner
                            android:id="@+id/sucursal_Apartado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>

                        <Spinner
                            android:id="@+id/categoria_ventas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_ordenes_especiales"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".95"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pestaniaOrdenesEspeciales"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_flecha_abajo"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="Órdenes Especiales"
                            android:layout_marginLeft="50dp"
                            android:textColor="@color/colorPrimaryDark" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_ordenes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".9"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:gravity="center"
                                android:text="Fecha de:"></TextView>

                            <Button
                                android:id="@+id/abrir_calendarioOrdenes1"
                                style="@android:style/Widget.Holo.Light.Button"
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/shape_gray"
                                android:drawableLeft="@drawable/ic_calendario"
                                android:paddingHorizontal="10dp"
                                android:text="Abrir Calendario"
                                android:textColor="@color/gray"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:gravity="center"
                                android:text="A:"></TextView>

                            <Button
                                android:id="@+id/abrir_calendarioOrdenes2"
                                style="@android:style/Widget.Holo.Light.Button"
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/shape_gray"
                                android:drawableLeft="@drawable/ic_calendario"
                                android:paddingHorizontal="10dp"
                                android:text="Abrir Calendario"
                                android:textColor="@color/gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/articulo_Ordenes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>

                        <Spinner
                            android:id="@+id/sucursal_Ordenes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>

                        <Spinner
                            android:id="@+id/categoria_Ordenes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginVertical="30dp"></Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_invisible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight=".5"></LinearLayout>

                </LinearLayout>


            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:background="@drawable/pestanas_desplegables"
            android:padding="20dp">

            <com.Danthop.bionet.Tables.SortableInventariosTable
                android:id="@+id/tabla_inventario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:visibility="visible"
                app:tableView_headerColor="@color/white"
                table:tableView_columnCount="5">
            </com.Danthop.bionet.Tables.SortableInventariosTable>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>